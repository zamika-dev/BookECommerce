@using SampleStore.Web.Models.Cart
@model CheckoutAddressViewModel
@{

}

<div class="container py-4">
    <div class="row">
        <!-- جزئیات قیمت - سمت چپ بالا -->
        <div class="col-lg-4 order-lg-2 mb-4">
            <div class="bg-white p-4 rounded rounded-4 border border-1">
                <h5 class="mb-4 fw-bold text-center">جزئیات قیمت</h5>

                <div class="d-flex justify-content-between mb-2">
                    <span>قیمت محصولات:</span>
                    <span>@Model.OrderTotal تومان</span>
                </div>

                <div class="d-flex justify-content-between mb-2">
                    <span>تخفیف محصولات:</span>
                    <span>@Model.Discount تومان</span>
                </div>

                <hr>

                <div class="d-flex justify-content-between mb-2">
                    <span>هزینه ارسال:</span>
                    <span>@Model.PostPrice تومان</span>
                </div>

                <hr>

                <div class="d-flex justify-content-between fw-bold mb-3">
                    <span>مبلغ قابل پرداخت:</span>
                    <span>@Model.TotalPrice تومان</span>
                </div>

                <button class="btn btn-danger w-100 fw-bold disabled">تأیید و ادامه</button>
            </div>
        </div>
        <div class="col-lg-8 order-lg-1 text-center">
            <div class="bg-white p-4 rounded rounded-4 border border-1 mb-3">
                <div class="row align-items-center flex-column">
                    <img src="~/images/Address.png" height="100" style="width:auto;" />
                    <p class="mt-3">برای ارسال سفارش، لطفا آدرس را وارد کن!</p>
                    <button class="btn btn-danger w-auto ps-5 pe-5">افزودن آدرس</button>
                </div>
            </div>
        </div>
    </div>
</div>