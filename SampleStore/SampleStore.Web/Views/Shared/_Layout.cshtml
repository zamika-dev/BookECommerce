<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>فروشگاه کتاب - @ViewData["Title"]</title>

    <!-- Bootstrap RTL از CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css"
    integrity="sha384-PJsj/BTMqILvmcej7ulplguok8ag4xFTPryRq8xevL7eBYSmpXKcbNVuy+P0RMgq"
    crossorigin="anonymous">

    <!-- Bootstrap Icons از CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- فایل‌های CSS محلی -->
    <link rel="stylesheet" href="~/Css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Css/CustomStyle.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 " style="background-color: antiquewhite">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo2.png" alt="لوگو فروشگاه کتاب" height="40" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">خانه</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Books" asp-action="Books">کتاب‌ها</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Categories" asp-action="Index">دسته‌بندی‌ها</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Contact" asp-action="Index">تماس با ما</a>
                        </li>
                    </ul>

                    <div class="position-absolute start-50 translate-middle-x">
                        <form class="d-flex" asp-controller="Books" asp-action="Search" method="get">
                            <input class="form-control me-2" type="search" placeholder="جستجوی کتاب..." aria-label="Search" name="query" style="width: 300px;">
                            <button class="btn btn-outline-dark" type="submit">جستجو</button>
                        </form>
                    </div>

                    @* <partial name="_LoginPartial" /> *@
                    <div class="ms-auto">
                        @if(User.Identity.IsAuthenticated)
                        {
                            <div class="ms-auto d-flex align-items-center gap-2">
                                <a class="btn btn-outline-dark" asp-controller="Cart" asp-action="CartItems">
                                    <i class="bi bi-cart"></i>
                                    <span class="badge bg-danger" id="cartCount">0</span>
                                </a>
                                
                                <div class="dropdown">
                                    <a class="btn btn-outline-dark" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                        <li><a class="dropdown-item" href="#">پروفایل</a></li>
                                        <li><a class="dropdown-item" href="#">تنظیمات</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li></li>
                                    </ul>
                                </div>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Logout">خروج</a>
                            </div>
                        }
                        else{
                            <a class="me-1" asp-controller="Account" asp-action="Register" style="color: coral; text-decoration:none">ثبت نام</a>
                            <span>/</span>
                            <a class=" ms-1" asp-controller="Account" asp-action="login" style="color: coral; text-decoration:none">ورود</a>
                        }
                        
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: antiquewhite">
        <div class="container mt-5 mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/images/logo2.png" alt="لوگو فروشگاه کتاب" height="100" />
                    <h5 class="mt-2">فروشگاه کتاب</h5>
                    <p>ارائه بهترین کتاب‌ها با بهترین قیمت</p>
                    
                </div>
                <div class="col-md-4">
                    <h5>لینک‌های سریع</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index" style="color: coral; text-decoration:none">خانه</a></li>
                        <li><a asp-controller="Books" asp-action="Index" style="color: coral;text-decoration:none">کتاب‌ها</a></li>
                        <li><a asp-controller="About" asp-action="Index" style="color: coral;text-decoration:none">درباره ما</a></li>
                        <li><a asp-controller="Contact" asp-action="Index" style="color: coral;text-decoration:none">تماس با ما</a></li>
                    </ul>
                </div>
                <div class="dropdown">
                    <a class="btn btn-outline-dark me-2 dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person"></i>
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <li><a class="dropdown-item" href="#">پروفایل</a></li>
                        <li><a class="dropdown-item" href="#">سفارش‌ها</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">خروج</a></li>
                    </ul>
                </div>
            </div>
            <div class="text-center mt-3">
                &copy; 2023 - فروشگاه کتاب - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: coral;text-decoration:none">حریم خصوصی</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    <!-- برای به روزرسانی تعداد آیتم‌های سبد خرید -->
    <script>
        $(document).ready(function() {
            updateCartCount();
        });

        function updateCartCount() {
            $.get('/Cart/GetCartCount', function(data) {
                $('#cartCount').text(data);
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>